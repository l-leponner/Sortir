{% extends 'base.html.twig' %}

{% block title %}Sortir.com | Homepage{% endblock %}

{% block body %}

    {%if app.user%}
        <p>Date du jour : {{date('now')|date("d/m/Y")}}</p>
        <p>Participant : {{app.user.userIdentifier}}</p>
    {%endif%}

    <section>
        <h2>Filtrer les sorties</h2>

        {{form_start(searchForm)}}

        {{form_label(searchForm.campus)}}
        {{form_widget(searchForm.campus)}}
        {{form_errors(searchForm.campus)}}

        {{form_end(searchForm)}}
    </section>

{% endblock %}
